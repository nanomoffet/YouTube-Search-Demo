{
  "name": "youtube-search-demo",
  "version": "0.0.0",
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupJest.ts"
    ],
    "roots": [
      "src/app/"
    ]
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --prod",
    "prebuild": "npm-run-all --parallel --silent lint stylelint test cypress:prebuild",
    "build": "ng build --prod",
    "test": "jest",
    "lint": "ng lint",
    "test:watch": "jest --watch",
    "cypress:dev": "npm-run-all --parallel --race serve 'cypress:open'",
    "cypress:build": "npx start-server-and-test serve :8100 cypress:run",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "docs": "node_modules/.bin/compodoc -p tsconfig.json -d docs",
    "serve-docs": "node_modules/.bin/compodoc -s -d docs",
    "stylelint": "stylelint 'src/**/*.scss' --fix > style-errors.txt",
    "cz": "git cz"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/cdk": "~7.3.6",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/material": "^7.3.6",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "core-js": "^2.5.4",
    "hammerjs": "^2.0.8",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.7",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@compodoc/compodoc": "^1.1.9",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^24.0.11",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "conventional-changelog": "^3.0.6",
    "cypress": "^3.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "jest": "^24.6.0",
    "jest-preset-angular": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "start-server-and-test": "^1.7.12",
    "stylelint": "^9.10.1",
    "stylelint-scss": "^3.5.4",
    "ts-jest": "^24.0.1",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "npm-run-all --parallel --silent lint stylelint test"
    }
  }
}
